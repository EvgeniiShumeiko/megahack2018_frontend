diagram()
    .react-js-diagrams-canvas
        position relative
        flex-grow 1
        display flex
        cursor move
        overflow hidden

    .react-js-diagrams-canvas .point
        fill rgba(white, .5)

    .react-js-diagrams-canvas .point .selected
        fill rgb(0, 192, 255)

    .react-js-diagrams-canvas .selector
        position absolute
        background-color: rgba(0, 192, 255, 0.2)
        border solid 2px rgb(0, 192, 255)

    .react-js-diagrams-canvas svg
        position absolute
        height 100%
        width 100%
        transform-origin 0 0
        overflow visible

    .react-js-diagrams-canvas .node-view
        top 0
        left 0
        right 0
        bottom 0
        position absolute
        pointer-events none
        transform-origin 0 0
        z-index 1

    .react-js-diagrams-canvas .node
        position absolute
        -webkit-touch-callout none /* iOS Safari */
        -webkit-user-select none /* Chrome/Safari/Opera */
        user-select none
        cursor move
        pointer-events all

    .react-js-diagrams-canvas .node .selected
        border-color rgb(0, 199, 255) !important
        -webkit-filter drop-shadow(0 0 20px rgba(0, 192, 255, .5))

    .react-js-diagrams-canvas
        @keyframes dash
            from
                stroke-dashoffset 24
            to
                stroke-dashoffset 0

    .react-js-diagrams-canvas path
        fill none
        pointer-events all

    .react-js-diagrams-canvas path .selected
        stroke rgb(0, 192, 255) !important
        stroke-dasharray 10,2
        animation dash 1s linear infinite

    .react-js-diagrams-canvas path:hover
        cursor pointer

    .react-js-diagrams-canvas .port
        width 15px
        height 15px
        background rgba(white, .1)

    .react-js-diagrams-canvas .port:hover
        background-image linear-gradient(rgba(black, 0.1),rgba(black,0.15))
        cursor pointer

    .react-js-diagrams-canvas .port .selected
        background rgb(192, 255, 0)

    .react-js-diagrams-canvas .basic-node
        background-color: #bae4fa
        border-radius 5px
        font-family Arial
        color #000
        border solid 2px #b9e3f9
        overflow visible
        font-size 11px
        box-shadow 0 0 10px rgba(black, .5)

    .react-js-diagrams-canvas .basic-node .title
        color black
        display flex
        white-space nowrap
        aligin-self center

    .react-js-diagrams-canvas .basic-node .title .fa
        padding 5px
        opacity 0.2
        cursor pointer

    .react-js-diagrams-canvas .basic-node .title .fa:hover
        opacity 1

    .react-js-diagrams-canvas .basic-node .title .name
        flex-grow 1
        padding 5px 5px

    .react-js-diagrams-canvas .basic-node .hidden-info
        background #fff

    .react-js-diagrams-canvas .basic-node .ports
        display flex
        background-image linear-gradient(rgba(black, 0.05),rgba(black,0.1))

    .react-js-diagrams-canvas .basic-node .ports .in, .out
        flex-grow 1
        display flex
        flex-direction column

    .react-js-diagrams-canvas .basic-node .ports .in-port, .out-port
        display flex
        margin-top 1px
        aligin-self: center

    .react-js-diagrams-canvas .basic-node .ports .name
        padding 0 5px

    .react-js-diagrams-canvas .basic-node .ports .in-port
        justify-content flex-start

    .react-js-diagrams-canvas .basic-node .ports .out-port
        justify-content flex-end

    .react-js-diagrams-canvas .basic-node .ports .out-port .name
        justify-content flex-end
        text-align right
