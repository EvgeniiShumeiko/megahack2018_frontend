.title
    font-weight normal
    font-size 30px
    font-family Proxima
    margin-left 15%
    color #333

.hr
    width 100px
    border 4px solid #007BFF
    margin 5px 0 20px 15%

.road-map
    width 70%
    border-bottom 4px solid #E5E5E5
    font-size 20px
    margin auto

.road-map__previous
    color #E5E5E5

.road-map__current
    color #39434D

.all-available-mentors
    width 70%
    margin 65px auto

.topBarContainer
    width 70%
    margin auto
    display flex
    justify-content space-around
    margin-bottom 50px

.personalTaskContainer
    grid-column-start 1
    grid-column-end 8
    height 100%
    border 1px solid #c4c4c4
    border-radius 2px
    display grid
    grid-template-columns 1fr 20fr
    grid-template-rows 100%

.personalTasksTable
    width 70%
    margin auto
    display grid
    grid-template-columns repeat(10, 1fr)
    grid-row-gap 44px
    position relative

.personalTaskImage
    width 100%
    height 175px
    background-color #FBA237

.personalTaskMeta
    height 175px
    padding 14px 15px 15px 21px
    display flex
    flex-direction column
    justify-content space-between

.contactMentor
    width 130px
    font-size 20px
    color #FE5337
    text-decoration underline
    font-weight lighter

.titleWithTable
    display flex
    justify-content space-between
    align-items center

.personalTaskButton
    background-color #007BFF
    outline none
    padding 4px 10px
    border none
    border-radius 2px
    font-family Proxima
    font-size 20px
    color white

.personalTitle
    font-weight normal
    font-size 25px
    font-family Proxima
    color #333

.chosen
    background-color white
    border none
    outline none
    height 40px
    border-bottom 3px solid #007BFF
    font-family Proxima
    font-size 30px

.default
    background-color white
    border none
    outline none
    height 30px
    font-size 30px
    font-family Proxima

.personalTaskHr
    width 100%
    padding 0 20px
    border-bottom 2px solid #bbb
    height 9px

.smallTaskTitle
      font-size 23px
      font-family Proxima
      color #111
      display flex
      justify-content space-between

.smallTaskBio
    display flex
    align-items center
    font-size 18px
    color #666

.personalMentor
    position absolute
    right 0
    width 18vw
    height 300px
    border 1px solid black
    display flex
    flex-direction column
    padding 10px
    align-items center

.mentorImage
    width 100%
    height 40%
    border 1px solid gray
