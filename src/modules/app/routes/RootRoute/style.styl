div > span, button
    font-family Proxima
    color #333

.mainTable
    width 70%
    margin auto
    display grid
    grid-template-columns repeat(12, 1fr)

.info
    margin-top 50px
    grid-column-start 1
    grid-column-end 6
    display flex
    flex-direction column
    align-items flex-start

.infoTitle
    font-size 44px
    color #333

.infoText
    font-size 19px
    margin-top 5px
    color #333

.infoButton
    margin-top 44px
    background-color #007BFF
    color white
    padding 8px 25px
    border-radius 100px
    font-size 23px
    border none
    outline none

.planTitleContainer
    grid-column-start 1
    grid-column-end 12
    display flex
    justify-content center
    margin-top 120px
    flex-direction column
    align-items center

.planTitle
    font-size 44px
    color #333

.planHr
    border 4px solid #FD6F6F
    width 140px

.planLeft
    grid-column-start 1
    grid-column-end 13
    display grid
    grid-template-columns repeat(12, 1fr)
    margin-top 150px

.planLeftImage
    grid-column-start 1
    grid-column-end 7

.planLeftImage > img
    width 550px
    height 300px
    object-fit cover

.planRightText
    grid-column-start 8
    grid-column-end 13
    display flex
    flex-direction column
    align-items flex-start

.planNum
    color #777
    font-size 45px

.planStepTitle
    color #333
    font-size 23px

.planStepText
    color #333
    font-size 16px
    margin-top 10px

.planRight
    grid-column-start 1
    grid-column-end 13
    display grid
    grid-template-columns repeat(12, 1fr)
    margin-top 150px

.planLeftText
    grid-column-start 1
    grid-column-end 7
    display flex
    width 390px
    flex-direction column
    align-items flex-start
    margin-right 200px

.planeRightImage
    grid-column-start 8
    grid-column-end 13

.planeRightImage > img
    width 550px
    height 300px
    object-fit cover
