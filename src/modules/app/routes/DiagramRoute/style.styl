@import '~@core/mixins/diagram'

diagram()

html, body, #root
    width 100%
    height 100%
    padding 0
    margin 0

img
    width 2.8rem
    height 3rem

.nodes-panel
    display flex
    flex-direction column

.nodes-panel .home:active
    box-shadow 0 0 0 2px black
    border-radius 10%

.parent-container
    flex 1
    display flex
    height 100%

.nodes-panel
    max-width 17rem
    min-width 3rem
    padding .5rem

.parent-container .nodes-panel
    background #c5c5c5

.parent-container .diagram-drop-container
    flex 1
    display flex
    flex-direction column

.parent-container .diagram-drop-container .react-js-diagrams-canvas
    flex 1
    background rgb(255, 255, 255)
    border-right 1px solid black

.parent-container .btn
    color white
    border-radius 4px
    background-color #0c87cc
    height 30px
    width 200px
    float left
    margin-top 15px
    margin-right 5px
    text-align center

.parent-container .controls
    flex 0 0 210px
    margin-top 30px
    background-color transparent
    max-width 20rem
    text-align center

.port
    width 40px
    height 25px
    background rgba(red, .1)

.port:hover, .port.selected
    opacity 0.7
    width 40px

.basic-node
    background-color rgb(0, 0, 0)
    border-radius 5px
    font-family Arial
    color white
    border solid 2px #0c87cc
    overflow visible
    font-size 11px

.basic-node:hover
    cursor pointer

.basic-node .title
    color black
    display flex
    white-space nowrap

.basic-node .title > *
    align-self center

.basic-node .title .fa
    padding 5px
    opacity .2
    cursor pointer

.basic-node .title .fa:hover
    opacity 1

.basic-node .title .name
    flex-grow: 1
    padding 5px 5px

.basic-node .title .info
    text-align center
    color: black

.basic-node .ports
    display flex
    background-image linear-gradient(rbga(black, .1), rgba(black, .2))

.basic-node .ports .in,.out
    flex-grow 1
    display flex
    flex-direction column

.basic-node .ports .in-port, .out-port
    display flex
    margin-top 1px

.basic-node .ports .in-port, .out-port > *
    aligin-self: center

.basic-node .ports .in-port
    justify-content flex-start

.basic-node .ports .out-port
    justify-content flex-end

.basic-node .ports .out-port .name
    justify-content flex-end
    text-align right
