.time-line
    min-height 100vh
    width 80%
    margin-left 10%
    margin-right 10%
    margin-top: 5%
    display inline-flex

.column
    margin 0 30px

.column-header
    height 120px
    background transparent

.column-header::after
    content ''
    position absolute
    top 271px
    margin-left 105px
    background #FBA237
    border-radius 50%
    height 40px
    width 40px

.column-tags
    max-width 98%
    min-width 20%
    margin auto
    height 60%

.active-skill
    height 50px
    width 50px
    background #fff
    margin 0 5px
    border-radius 50%
    display inline-block

.active-skill > img
    height 50px
    width 50px
    margin 0

.add-items
    width 80%
    margin 10px auto
    height 30px
    background #abe5f2
    text-align center
    cursor pointer
    border-radius 13%

.background-line
    height 5px
    position absolute
    top 290px
    width 100%
    background #c4c4c4
